---
import config from '../config.json';
---

<div class="social-media-container">
    <h3 class="section-title">Connect US</h3>
    <div class="social-icons">
        {config.socialMedia.linkedin && config.socialMedia.linkedin !== '[Your LinkedIn URL]' && (
            <a href={config.socialMedia.linkedin} id="linkedin-link" class="social-icon" title="LinkedIn" target="_blank">
                <i class="fab fa-linkedin"></i>
            </a>
        )}
        {config.socialMedia.github && (
            <a href={config.socialMedia.github} id="github-link" class="social-icon" title="GitHub" target="_blank">
                <i class="fab fa-github"></i>
            </a>
        )}
        {config.socialMedia.twitter && config.socialMedia.twitter !== '[Your Twitter URL]' && (
            <a href={config.socialMedia.twitter} id="twitter-link" class="social-icon" title="Twitter" target="_blank">
                <i class="fab fa-twitter"></i>
            </a>
        )}
        {config.socialMedia.portfolio && (
            <a href={config.socialMedia.portfolio.startsWith('http') ? config.socialMedia.portfolio : `https://${config.socialMedia.portfolio}`} id="portfolio-link" class="social-icon" title="Portfolio" target="_blank">
                <i class="fas fa-globe"></i>
            </a>
        )}
        {config.socialMedia.whatsapp && (
            <a href={`https://wa.me/${config.socialMedia.whatsapp.replace(/[+\s-]/g, '')}`} id="whatsapp-link" class="social-icon" title="WhatsApp" target="_blank">
                <i class="fab fa-whatsapp"></i>
            </a>
        )}
        {config.socialMedia.telegram && (
            <a href={`https://t.me/${config.socialMedia.telegram.replace('@', '')}`} id="telegram-link" class="social-icon" title="Telegram" target="_blank">
                <i class="fab fa-telegram"></i>
            </a>
        )}
        {config.socialMedia.discord && (
            <a href={config.socialMedia.discord} id="discord-link" class="social-icon" title="Discord" target="_blank">
                <i class="fab fa-discord"></i>
            </a>
        )}
        {config.socialMedia.youtube && (
            <a href={config.socialMedia.youtube} id="youtube-link" class="social-icon" title="YouTube" target="_blank">
                <i class="fab fa-youtube"></i>
            </a>
        )}
    </div>
</div>

<style>
    .social-media-container {
        text-align: center;
        margin-bottom: 3rem;
        animation: floatIn 1.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .section-title {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
        background: linear-gradient(135deg, #fff, #a8b9ff);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .social-icons {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1.2rem;
    }

    .social-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50px;
        height: 50px;
        border-radius: 16px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.06), rgba(255, 255, 255, 0.02));
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        color: white;
        font-size: 1.5rem;
        transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2), inset 0 0 0 0.5px rgba(255, 255, 255, 0.15);
    }

    .social-icon:hover {
        transform: translateY(-5px) scale(1.1);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3), inset 0 0 0 0.5px rgba(255, 255, 255, 0.2);
    }

    @media (max-width: 768px) {
        .social-icons {
            gap: 1rem;
            max-width: 400px;
            margin: 0 auto;
        }
        .social-icon {
            width: 48px;
            height: 48px;
            font-size: 1.2rem;
            border-radius: 14px;
        }
        .section-title {
            font-size: 1.3rem;
            margin-bottom: 1.2rem;
        }
    }

    @media (max-width: 480px) {
        .social-icons {
            gap: 0.8rem;
            padding: 0 0.5rem;
        }
        .social-icon {
            width: 42px;
            height: 42px;
            font-size: 1.1rem;
            border-radius: 12px;
        }
        .section-title {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
    }

    @media (max-width: 360px) {
        .social-icons {
            gap: 0.6rem;
        }
        .social-icon {
            width: 38px;
            height: 38px;
            font-size: 1rem;
        }
    }
</style>
